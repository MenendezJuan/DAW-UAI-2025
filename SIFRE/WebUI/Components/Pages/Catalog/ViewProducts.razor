@page "/ver-productos"
@using BE.DTO
@using Infrastructure.Session
@inject IProductBLL ProductBLL
@inject SingletonSession SingletonSession

<h3>📦 Productos disponibles</h3>

@if (products is null)
{
    <p>Cargando productos...</p>
}
else if (!products.Any())
{
    <p>No hay productos disponibles.</p>
}
else
{
    <table class="table table-hover table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Categoría</th>
                <th>Puntos</th>
                <th>Inicio</th>
                <th>Fin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>@product.Description</td>
                    <td>@product.Category</td>
                    <td>@product.Points</td>
                    <td>@(product.StartDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                    <td>@(product.EndDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IList<ProductDTO> products;

    protected override void OnInitialized()
    {
        products = ProductBLL.GetProducts(false, false);
    }
}
